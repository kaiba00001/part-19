@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item ml-auto">
            <!-- Use ml-auto to push the element to the right -->
            <div class="special-links">
                @if (User.IsInRole("Doctor"))
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="ItemsLeads" asp-action="Index">Supplies</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="LabResults" asp-action="Index">LabResults</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="MedicineReports" asp-action="Index">MedicineReports</a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="AppRoles" asp-action="Index">Roles</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="ItemsLeads" asp-action="Index">Supplies</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="StockTrackerLeads" asp-action="Index">Stock Tracker</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="LabResults" asp-action="Index">LabResults</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="EmployeePayrolls" asp-action="Index">EmployeePayrolls</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="MedicineReports" asp-action="Index">MedicineReports</a>
                }
            </div>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

<style>
    .special-links {
        display: flex;
        justify-content: flex-end;
    }

        .special-links .nav-link {
            margin-left: 10px;
        }
</style>



